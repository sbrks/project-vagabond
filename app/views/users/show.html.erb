<!--user photo div -->
 <div class="row">
    <div class="five columns">
        <img src="https://getwalls.io/media/thumbs/2015/05/game-of-thrones-bird-95921905.jpg" width="250" height="250">
        <div id="button submit">
        <%= form_for @user do |form| %>
        </div>
        <div id="button upload">
        <h6>Change Photo
        <input type="hidden" role="uploadcare-uploader" name="my_file" /></h6>
        </div>
    <% end %>
</div>


<!--user info div -->
<div class="row">
    <div class="five columns">
        <p><b>Username: </b><%= @user.username %></p>
        <p><b>Location: </b><%= @user.location %></p>
        <p><b>Email: </b><%= @user.email %></p>
    </div>
</div>

