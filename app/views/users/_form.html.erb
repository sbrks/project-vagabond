 <!-- app/views/users/new.html.erb -->

<%= form_for :user, url: "/users" do |f| %>
  <div class="form-group">
    <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
  </div>

    <div class="form-group">
    <%= f.text_field :location, class: "form-control", placeholder: "Current City", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Account", class: "btn btn-block btn-success" %>
  </div>
<% end %>
