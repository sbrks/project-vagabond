<div class="container">
<!--   <%= @city = City.find(params[:id]) %> -->
  <h2>Post to <%= @city.name %>!</h2>

  <%= form_for :posts do |f| %>
  <%= f.text_field :title, placeholder: "Title" %><br>
  <%= f.text_area :description, placeholder: "Description" %><br>

<!-- push post to city id in hidden form field -->
  <%= hidden :city_id => @city.id %>

  <%= f.submit "Submit" %>
  <% end %>
</div>